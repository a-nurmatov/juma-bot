{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["api/**/*.ts", "src/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
